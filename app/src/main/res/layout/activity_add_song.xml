<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.s_a_r_c.applicationprojecttest.addSongActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titre:"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTitleNewMusic"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Artiste:"
        android:id="@+id/textView19"
        android:layout_below="@+id/etTitleNewMusic"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etArtistNewMusic"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="URL:"
        android:id="@+id/textView20"
        android:layout_below="@+id/etArtistNewMusic"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etURLNewMusic"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etArtistNewMusic" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publique:"
        android:id="@+id/checkBox7"
        android:checked="true"
        android:layout_below="@+id/etURLNewMusic"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active:"
        android:id="@+id/checkBox8"
        android:layout_below="@+id/etURLNewMusic"
        android:layout_toEndOf="@+id/checkBox7"
        android:checked="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:onClick="createSong"
        android:id="@+id/button15"
        android:layout_below="@+id/checkBox7"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etURLNewMusic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etYoutubeSearch"
        android:layout_below="@+id/button15"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etArtistNewMusic" />

    <Spinner
        android:id="@+id/spinnerYoutubeSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etYoutubeSearch"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechercher"
        android:onClick="searchVideo"
        android:id="@+id/button17"
        android:layout_below="@+id/spinnerYoutubeSearch"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etURLNewMusic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:onClick="addVideo"
        android:id="@+id/button18"
        android:layout_below="@+id/button17"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etURLNewMusic" />


</RelativeLayout>
